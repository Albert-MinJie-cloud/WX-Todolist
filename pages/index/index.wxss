.home {
  min-height: 100vh;
  position: relative;
  background: #f7f8fa;
}

.add-todo {
  width: 3.5rem;
  height: 3.5rem;
  border-radius: 50%;
  background: #1989fa;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 1rem;
  right: 1rem;
  box-shadow: 1px 1px 10px 1px rgb(150, 150, 150);
  z-index: 0;
}

.add-todo::before {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  background-color: #000;
  border: inherit;
  border-color: #000;
  border-radius: inherit;
  transform: translate(-50%, -50%);
  opacity: 0;
  content: ' '
}

.add-todo:active::before {
  opacity: 0.1;
}


.sort {
  height: 2.5rem;
  width: 100%;
  position: fixed !important;
  top: 0;
  left: 0;
  display: flex;
  z-index: 10;
}

.van-dropdown-menu {
  height: 2.5rem !important;
}

.left {
  width: 66.6%;
  height: 100%;
}

.right {
  width: 33.3%;
  height: 100%;
  background: white;
  box-shadow: 0 2px 12px rgba(100, 101, 102, .12);
  display: flex;
  align-items: center;
  justify-content: center;
}

.right-content {
  display: flex;
  align-content: center;
}

.sort-text {
  font-size: 0.75rem;
  margin-right: 1rem;
}

.din {
  height: 40px;
  background: #f7f8fa;
}

.cell {
  margin-top: 24rpx;
  height: 48px;
}

.van-swipe-cell__left {
  display: inline-block;
  width: 65px;
  height: 44px;
  font-size: 15px;
  line-height: 44px;
  color: #fff;
  text-align: center;
  background-color: #07c160;
}

.van-swipe-cell__right {
  display: inline-block;
  width: 140px;
  height: 44px;
  font-size: 15px;
  line-height: 44px;
  color: #fff;
  text-align: center;
  background-color: #ee0a24;
}

.left-icon {
  margin-right: 6px;
}

.right-btn-flex {
  display: flex;
}

.right-btn-flex-complete {
  width: 70px;
  height: 48px;
  background-color: #07c160;
}

.right-btn-flex-delete {
  width: 70px;
  height: 48px;
  background-color: #ee0a24;
}